
<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="col-md-4"></div>
            <div class="col-md-4">
                <div class="panel panel-default">

                    <div class="panel-body text-center">
                        <div class="row">
                            <div class="col-md-12">
                                    <a class="" href="#">

                                        {% if user.imageURL %}
                                            <img src="{{ user.imageURL }}" class="img-lg img-border img-circle" alt="Profile Picture" style="width: 180px; height: 180px;">
                                        {% else %}
                                            <img src="{{ asset('img/placeholders/default.png') }}" class="img-lg img-border img-circle" alt="Profile Picture" style="width: 180px; height: 180px;">
                                        {% endif %}
                                    </a>
                            </div>
                            <div class="col-md-12">

                                <h2>{{ user.firstName }} {{ user.lastName }}</h2>

                                <p>{{ user.aboutMe }}</p>

                                <div class="row stats">

                                    <div class="col-xs-4">
                                        <a href="#" class="stat">
                                            <strong>{{ user.posts.count }}</strong>
                                            Posts

                                        </a>
                                    </div>

                                    <div class="col-xs-4">
                                        <a href="#" class="stat">
                                            <strong>{{ user.followers }}</strong>
                                            Followers

                                        </a>
                                    </div>

                                    <div class="col-xs-4">

                                        <a href="#" class="stat">
                                            <strong>{{ user.following }}</strong>
                                            Following

                                        </a>
                                    </div>

                                </div>

                            </div>
                        </div>
                    </div>


                    <div id="IdFooter" class="panel-footer text-center">

                        <ul class="social-network social-circle">

                            <li><a href="{{ user.facebookURL }}" class="icoFacebook" title="Facebook"><i class="fa fa-facebook"></i></a></li>
                            <li><a href="{{ user.twitterURL }}" class="icoTwitter" title="Twitter"><i class="fa fa-twitter"></i></a></li>
                            <li><a href="{{ user.instagramURL }}" class="icoInstagram" title="Instagram"> <i class="fa fa-instagram"></i></a></li>


                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
