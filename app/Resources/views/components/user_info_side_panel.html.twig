<div class="fixed-sm-200 fixed-lg-250 pull-sm-left">
    <div class="panel">
        <div class="panel-body text-center">
            {% if user.imageURL %}
                <img src="{{ user.imageURL }}" class="img-lg img-border img-circle" alt="Profile Picture">
            {% else %}
                <img src="{{ asset('img/placeholders/default.png') }}" class="img-lg img-border img-circle" alt="Profile Picture">
            {% endif %}
            <p class="text-lg text-semibold mar-no text-main pad-top">{{ user.firstName }} {{ user.lastName }}</p>
            <p class="text-sm">{{ user.aboutMe }}</p>
            <ul class="list-unstyled text-center bord-top pad-top mar-no row">
                <li class="col-xs-4">
                    <span class="text-lg text-semibold text-main">{{ user.following }}</span>
                    <p class="text-muted mar-no">Following</p>
                </li>
                <li class="col-xs-4">
                    <span class="text-lg text-semibold text-main">{{ user.followers }}</span>
                    <p class="text-muted mar-no">Followers</p>
                </li>
                <li class="col-xs-4">
                    <span class="text-lg text-semibold text-main">{{ user.posts.count }}</span>
                    <p class="text-muted mar-no">Posts</p>
                </li>
            </ul>
        </div>

        <div class="panel-footer text-center">
            <ul class="social-network social-circle">

                <li><a href="{{ user.facebookURL }}" class="icon-wrap-sm" title="Facebook"><i class="fa fa-facebook"></i></a></li>
                <li><a href="{{ user.twitterURL }}" class="icon-wrap-sm" title="Twitter"><i class="fa fa-twitter"></i></a></li>
                <li><a href="{{ user.instagramURL }}" class="icon-wrap-sm" title="Instagram"> <i class="fa fa-instagram"></i></a></li>


            </ul>
        </div>


    </div>
</div>